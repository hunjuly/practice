{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Infrastructure",
            "type": "shell",
            "command": "node",
            "args": [
                "infrastructure.js",
                "${input:SetupTask}"
            ]
        },
        {
            "label": "Watch",
            "type": "shell",
            "command": "npm run watch"
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "npm run build"
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "SetupTask",
            "description": "실행환경 생성/해제",
            "options": [
                "setup",
                "clear"
            ],
            "default": "setup"
        }
    ]
}
