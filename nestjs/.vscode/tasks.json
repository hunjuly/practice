{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run database",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "${input:RunTask}"
            ]
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "RunTask",
            "description": "npm run $cmd",
            "options": [
                "db:memory",
                "db:mysql",
            ],
            "default": "db:memory"
        },
    ]
}
