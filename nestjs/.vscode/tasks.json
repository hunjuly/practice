{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "${input:RunTask}"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "start:debug"
            ]
        },
        {
            "label": "infra",
            "type": "shell",
            "command": "sh",
            "args": [
                "scripts/bootup_infra.sh"
            ]
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "RunTask",
            "description": "npm run $cmd",
            "options": [
                "test",
                "test:e2e",
            ],
            "default": "test:e2e"
        }
    ]
}
