{
    "name": "nestjs",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "start": "node dist/src/main",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "dev:comment": "npm run build로 생성된 dist가 존재하면 제대로 동작하지 않기 때문에 무조건 삭제한다.",
        "dev": "rimraf dist && nest start --debug --watch",
        "test": "npm run test:unit;npm run test:e2e",
        "test:unit": "jest --coverage",
        "test:e2e": "node --trace-warnings node_modules/.bin/jest --no-cache --config ./test/jest-e2e.json",
        "test:e2e:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config ./test/jest-e2e.json",
        "typeorm:generate": "typeorm-ts-node-commonjs   migration:generate  -d src/typeorm/data-source.ts   src/typeorm/migration/mig ",
        "typeorm:comment": "dependencies에 typescript 패키지를 추가하는 것을 피하기 위해서 data-source.js를 사용함",
        "typeorm:migration:run": "            typeorm   migration:run       -d dist/src/typeorm/data-source.js",
        "typeorm:migration:revert": "         typeorm   migration:revert    -d dist/src/typeorm/data-source.js",
        "typeorm:show": "                     typeorm   migration:show      -d dist/src/typeorm/data-source.js"
    },
    "dependencies": {
        "@nestjs/common": "^9.0.0",
        "@nestjs/config": "^2.2.0",
        "@nestjs/core": "^9.0.0",
        "@nestjs/mapped-types": "^1.1.0",
        "@nestjs/passport": "^9.0.0",
        "@nestjs/platform-express": "^9.0.0",
        "@nestjs/swagger": "^6.0.4",
        "@nestjs/typeorm": "^9.0.0",
        "bcrypt": "^5.0.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "connect-redis": "^6.1.3",
        "express-session": "^1.17.3",
        "ioredis": "^5.2.2",
        "joi": "^17.6.0",
        "mysql2": "^2.3.3",
        "passport": "^0.6.0",
        "passport-local": "^1.0.0",
        "pg": "^8.7.3",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "sqlite3": "^5.0.10",
        "typeorm": "^0.3.7",
        "winston": "^3.8.1",
        "winston-daily-rotate-file": "^4.7.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.0",
        "@nestjs/testing": "^9.0.0",
        "@types/bcrypt": "^5.0.0",
        "@types/express": "^4.17.13",
        "@types/express-session": "^1.17.5",
        "@types/jest": "28.1.4",
        "@types/multer": "^1.4.7",
        "@types/node": "^16.0.0",
        "@types/passport-local": "^1.0.34",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "28.1.2",
        "prettier": "^2.3.2",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "28.0.5",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "4.0.0",
        "typescript": "^4.3.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "moduleNameMapper": {
            "^src/(.*)$": "<rootDir>/src/$1"
        },
        "testEnvironment": "node",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage"
    }
}
